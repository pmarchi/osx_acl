#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.expand_path(File.dirname(__FILE__) + '/../lib'))

require 'osx_acl'

options = OsxAcl::Script.new.parse(ARGV)
dir = ARGV.first
path = OsxAcl::Dir.new(dir)

if options.aces.nil?
  puts path.get
else
  path.set(options.aces, :recursive => options.recursive)
end
