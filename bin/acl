#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'osx_acl'

OsxAcl::Script.new.parse(ARGV)


dir_and_files_permissions = %w(
  delete
  readattr
  writeattr
  readextattr
  writextxattr
  readsecurity
  writesecurity
  chown
  )
  
dir_permissions = %(
  list
  search
  add_file
  add_subdirectory
  delete_child
  )
  
file_permissions = %w(
  read
  write
  append
  execute
  )
  
inheritance = %w(
  file_inherit
  directory_inherit
  limit_inherit
  only_inherit
  )
  



